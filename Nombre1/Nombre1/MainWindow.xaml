<Window x:Class="Nombre1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="First Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="61,38,0,0"/>
        <TextBox Name="txtFirstName" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,38,0,0" Width="200"/>

        <Label Content="Last Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="61,79,0,0"/>
        <TextBox Name="txtLastName" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,79,0,0" Width="200"/>

        <Label Content="Full Name:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,123,0,0"/>
        <TextBox Name="txtFullName" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,167,0,0" Width="200" IsEnabled="False"/>
    </Grid>
</Window>
